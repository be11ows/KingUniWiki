<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Wiki</title>
    <link rel="stylesheet" href="css/site.css">
</head>

<body>
    <div>
        <aside>
            <div class="center">
                <img class="logo" src="img/logo.png" alt="logo">
            </div>

            <nav>
                <a href="/">Main Page</a>
                <a href="/allArticles">All Articles</a>
                <form>
                    <input type="text">
                    <input type="submit" value="Search">
                </form>
                {{#if loggedIn}}
                <a href="/create">Create New Article</a>
                {{/if}}
            </nav>
        </aside>
        <div id="container">
            <header>
                {{#unless loggedIn}}
                <a href="/login">Login</a>
                <a href="/register">Register</a>
                {{/unless}}
                {{#if username}}
                <span>Welcome, {{username}}!</span>
                {{/if}}
                {{#if loggedIn}}
                <a href="/logout">[Logout]</a>
                {{/if}}
            </header>
            <main>
                <h1>Welcome to KingUni Wiki!</h1>
                <section id="featured">
                    <h2>Latests articles</h2>
                    {{#each articles}}
                    <article>
                        <h3>{{articleTitle}}</h3>
                        <p>
                            {{content}}&hellip;
                        </p>
                        <div class="controls">
                            <a href="/article/{{_id}}">Read more</a>
                        </div>
                    </article>
